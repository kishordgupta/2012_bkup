<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
   	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:gravity="center_vertical"
	android:background="@drawable/aaa">
	  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <!-- Set myapp:adUnitId to be your publisher ID -->

            <com.google.ads.AdView
                android:id="@+id/ad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="a150facfa67e958"
                ads:refreshInterval="30" />
        </LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/linearLayout2" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:orientation="vertical"
		android:layout_marginTop="40dp">
		
				<Button android:layout_height="wrap_content"
   android:layout_width="wrap_content" android:background="@drawable/button"
    android:text="@string/Start"
        android:id="@+id/ReadWebPage"
   android:textSize="18dp"
   android:textColor="@android:color/black"
   android:textStyle="bold"></Button>
		
	<Button android:layout_height="wrap_content"
   android:layout_width="wrap_content" android:background="@drawable/button"
     android:text="@string/Update"
        android:id="@+id/update"
 android:textSize="18dp"
   android:textColor="@android:color/black"
   android:textStyle="bold"></Button>
   
   	<Button android:layout_height="wrap_content"
   android:layout_width="wrap_content" android:background="@drawable/button"
  android:text="@string/Exit"
        android:id="@+id/exit"
    android:textSize="18dp"
   android:textColor="@android:color/black"
   android:textStyle="bold"></Button>
						

		

	</LinearLayout>
</LinearLayout>