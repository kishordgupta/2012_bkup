<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.quiz.pretest.exam"
      android:versionCode="11"
      android:versionName="4.1">
         <uses-permission android:name="android.permission.INTERNET"/>
       <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application android:icon="@drawable/chuck_icon_bg" android:label="@string/app_name" android:theme="@android:style/Theme.Holo.Light" android:name="com.quiz.pretest.exam.ChuckApplication">
        <activity android:name="com.quiz.pretest.exam.SplashScreen"
                  android:label="@string/app_name"
                   android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name="com.quiz.pretest.exam.SplashActivity"  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden" />
		<activity android:name="com.quiz.pretest.exam.QuestionActivity"  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden" />
		<activity android:name="com.quiz.pretest.exam.RulesActivity"  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden"/>
		<activity android:name="com.quiz.pretest.exam.EndgameActivity"  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden"
                  android:theme="@android:style/Theme.DeviceDefault.Dialog"/>
		<activity android:name="com.quiz.pretest.exam.SettingsActivity"  android:screenOrientation="portrait"
                  android:configChanges="keyboard|keyboardHidden"
                  />
		<activity android:name="com.quiz.pretest.exam.AnswersActivity"  android:screenOrientation="landscape"
                  android:configChanges="keyboard|keyboardHidden"
                   android:theme="@android:style/Theme.DeviceDefault.Dialog"/>
		  <activity android:name="com.google.ads.AdActivity"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"  />
		
    </application>
    <uses-sdk android:minSdkVersion="4" />

</manifest> 