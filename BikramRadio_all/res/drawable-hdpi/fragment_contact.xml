<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/aboutImageView"
        android:layout_width="174dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:contentDescription="@string/station_description"
        android:src="@drawable/contact_img" />

    <TextView
        android:id="@+id/aboutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:textSize="48sp"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_contact"
        android:layout_gravity="left"
        android:layout_marginLeft="24dp"
        android:autoLink="email"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_contact"
        android:layout_gravity="left"
        android:layout_marginLeft="24dp"
        android:autoLink="phone"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/websiteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/website_contact"
        android:layout_gravity="left"
        android:layout_marginLeft="24dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
