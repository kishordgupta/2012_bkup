<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="8dp"
             android:paddingRight="8dp"
             android:paddingLeft="8dp">

    <LinearLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/textArticleListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textArticleListDeck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="The terminal at Cork airport had to be evacuated earlier - because of a burnt piece of toast."
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textArticleListTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
          
                android:gravity="center_vertical"
                android:text="5 hours ago"
                android:textColor="@color/grey_subtext"
                android:textIsSelectable="false"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/article_list_image_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageArticleList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image"
                android:maxHeight="300dp"
                android:scaleType="centerInside"
                android:src="@drawable/placeholder"/>

            <TextView
                android:id="@+id/textArticleListSponsored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="SPONSORED"
                android:textColor="@color/grey_subtext"
                android:textIsSelectable="false"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>