<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offBlack" 
    android:orientation="vertical">
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/transperant">
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
		  
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:gravity="center"
		            android:background="@color/transperant">
		             <com.google.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
            android:id="@+id/ad"
            android:layout_height="wrap_content"
             android:layout_width="fill_parent"
             ads:adUnitId="a15163092741bb3"
        ads:adSize="BANNER"
        ads:refreshInterval="30"
            ads:loadAdOnCreate="true" 
            />
		       
		            <TextView 
		                android:id="@+id/virtualMerchantNo"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/whiteColor"
		                android:text="Enter Any Public Facebook page"/>
		            <TextView 
		                android:id="@+id/merchantName"
		                android:layout_marginTop="6dp"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/whiteColor"
		                android:text="Download last 20 images uploaded that page in your SD card"/>
		              <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:gravity="left"
		            android:background="@color/transperant">
		            <TextView 
		             
		                android:layout_marginTop="6dp"
		                android:layout_marginLeft="6dp"
		                 android:layout_marginRight="6dp"
		                  android:layout_marginBottom="2dp"
		                android:layout_width="150dip"
		                android:layout_height="wrap_content"
		                android:textColor="@color/whiteColor"
		                android:text="To Download last 100 image please buy pro version form googleplay"/>
		            <TextView 
		                  android:layout_marginTop="6dp"
		                android:layout_marginLeft="6dp"
		                 android:layout_marginRight="6dp"
		                  android:layout_marginBottom="2dp"
		                 android:layout_width="150dip"
		                android:layout_height="wrap_content"
		                android:textColor="@color/whiteColor"
		                android:text="only write Facebookpage id name which shown in url"/>
		             <TextView 
		                 android:layout_marginTop="6dp"
		                android:layout_marginLeft="6dp"
		                 android:layout_marginRight="6dp"
		                  android:layout_marginBottom="2dp"
		                
		               android:layout_width="150dip"
		                android:layout_height="wrap_content"
		                android:textColor="@color/whiteColor"
		                android:text="Thank you"/>
		            </LinearLayout>
		               <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:orientation="vertical"
		            android:gravity="left"
		            android:background="@color/transperant">
		            <ImageView 
		                android:id="@+id/eWalletValue"
		                 android:layout_marginTop="6dp"
		                android:layout_marginLeft="6dp"
		                 android:layout_marginRight="6dp"
		                  android:layout_marginBottom="2dp"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="@color/whiteColor"
		                android:src="@drawable/u"/>
		           
		        </LinearLayout>
		        
		    </LinearLayout>	    
		    
		    <LinearLayout 
		        android:id="@+id/userPinArea"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:layout_margin="6dp"
		        android:padding="10dp"
		        android:orientation="vertical"
		        android:background="@color/transperant">
		        
		  
		        <EditText 
		            android:id="@+id/textUserPin"
		           
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="20dp"
		            android:layout_marginRight="20dp"
		            android:layout_marginTop="6dp"
		            android:layout_marginBottom="6dp"
		            android:gravity="center"
		            android:padding="10dp"
		            android:hint="Enter Facebook Page URL name here"
		            android:background="@drawable/round_background_white"/>
		        <Button 
	        	    android:id="@+id/submitButton"
	        	    android:text="Download Image"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="12dp"
	        	    android:layout_marginTop="20dp"
	        	    android:paddingLeft="15dp"
	        	    android:paddingRight="15dp"
	        	    android:textColor="@color/whiteColor"
	        	    android:textStyle="bold"
	        	    android:background="@drawable/button"/>
		          <Button 
	        	    android:id="@+id/gocategory"
	        	    android:text="View Downloaded images"
	        	    android:visibility="gone"
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="12dp"
	        	    android:layout_marginTop="20dp"
	        	    android:paddingLeft="15dp"
	        	    android:paddingRight="15dp"
	        	    android:textColor="@color/whiteColor"
	        	    android:textStyle="bold"
	        	    android:background="@drawable/button"/>
  
		    </LinearLayout>
		   	    
