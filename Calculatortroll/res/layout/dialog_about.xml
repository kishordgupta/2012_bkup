<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">
        	<TextView 
        	    android:id="@+id/content"
        	    android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:padding="6dp"
        	    android:text="Codenginebd is a Bangladeshi software company founded in 2011. Our expertise includes Android,Java,.NET platform with C#,php,mysql,javascript,jQuery,Flex. We mainly devoted to Android platform."/>
    </LinearLayout>
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">
        	<TextView 
        	    android:id="@+id/contactInfo"
        	    android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:padding="6dp"
        		android:textStyle="bold"
        	    android:text="For any kind of query please feel free to email us at codenginebd@gmail.com"/>
    </LinearLayout>
</LinearLayout>