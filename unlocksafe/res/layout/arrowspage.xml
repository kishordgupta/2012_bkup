<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    >
   <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Points Status"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp" />

     
    </RelativeLayout>
     <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@drawable/icon"
       >
 <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/button"
         android:layout_marginTop="8dp"
        android:text="Earn Point" 
         android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_weight="6"
            android:text="score"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp" />

        
 <TextView
        android:id="@+id/textView2"
       android:layout_width="wrap_content"
      
        android:layout_height="wrap_content"
      
       android:textColor="@android:color/holo_red_light"
        android:text="score"
        android:textSize="16sp" />

   
    </LinearLayout>
     <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        
        android:orientation="horizontal" >

        <TextView
           
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_weight="6"
            android:text="It sometime Takes Couple of Hours To update the point"
            android:textColor="@android:color/holo_red_light"
              android:textSize="16sp"/>

       
    </LinearLayout>
</LinearLayout>
   
<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true" >

        <com.atomix.kurowiz.supports.MyScrollView
            android:id="@+id/scrollView_exchange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/img_btn_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@android:drawable/stat_sys_download" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:src="@android:drawable/stat_sys_download_done"></ImageView>


                <LinearLayout
                    android:id="@+id/linear_layout_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </com.atomix.kurowiz.supports.MyScrollView>
    </FrameLayout>
</RelativeLayout>