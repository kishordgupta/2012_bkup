<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:id="@+id/ScrollView01"
	android:layout_width="fill_parent"	
	android:layout_height="fill_parent"
	android:background="@drawable/a1">
<LinearLayout 
	android:orientation="vertical" android:layout_width="fill_parent"
	
	android:layout_height="fill_parent" android:gravity="center_horizontal"
	>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="15dip" android:paddingBottom="15dip"
		android:gravity="center_horizontal">
   <com.google.ads.AdView
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adUnitId="a151c965bfc5cba"
        ads:adSize="BANNER"
        ads:refreshInterval="30"
     />
	    
	</LinearLayout>

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="5dip" android:paddingBottom="5dip"
		android:gravity="center_horizontal">

		<RadioGroup android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:id="@+id/group1">
			
			<TextView android:layout_width="fill_parent" android:text="Choose Diffciulty Settings:"
				android:layout_height="wrap_content" android:textColor="@android:color/black"
				android:textStyle="bold" android:id="@+id/question"/>
			
			<RadioButton android:checked="false" android:id="@+id/easySetting" android:text="Easy" android:textColor="@android:color/black"/>
			
			<RadioButton android:checked="false" android:id="@+id/mediumSetting"  android:text="Medium" android:textColor="@android:color/black"/>
			
			<RadioButton android:checked="false" android:id="@+id/hardSetting"  android:text="Hard" android:textColor="@android:color/black"/>
			
		</RadioGroup>

	</LinearLayout>
	
	

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="5dip" android:paddingBottom="5dip"
		android:gravity="center_horizontal">

		<Button android:text="Update" android:id="@+id/nextBtn"
			android:layout_width="80dip" android:layout_alignParentRight="true"
			android:layout_height="wrap_content" android:background="@drawable/button_selector"
			android:paddingTop="5dip" android:paddingBottom="5dip"
			android:textColor="#ffffff" />

	</LinearLayout>
<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingTop="5dip" android:paddingBottom="5dip"
			android:gravity="center_horizontal">
	
			<Button android:text="Download Hitman Reborn Quiz" android:id="@+id/hitman"
				android:layout_width="fill_parent" android:layout_alignParentRight="true"
				android:layout_height="wrap_content" android:background="@drawable/button_selector"
	
				android:paddingTop="5dip" android:paddingBottom="5dip"
				android:textColor="#ffffff" />
	
		</LinearLayout>
		
			<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:paddingTop="5dip" android:paddingBottom="5dip"
			android:gravity="center_horizontal">
	
			<Button android:text="Fairy Tail quiz" android:id="@+id/fairytale"
				android:layout_width="fill_parent" android:layout_alignParentRight="true"
				android:layout_height="wrap_content" android:background="@drawable/button_selector"
	
				android:paddingTop="5dip" android:paddingBottom="5dip"
				android:textColor="#ffffff" />
	
		</LinearLayout>
</LinearLayout>
</ScrollView>
