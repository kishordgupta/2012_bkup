<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dip" >

    <TextView
        android:id="@+id/txt_view_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textColor="@android:color/holo_red_dark"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_view_key"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
       android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/txt_view_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_view_date"
        android:layout_alignBottom="@+id/txt_view_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="TextView"
     android:textColor="@android:color/holo_red_dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/txt_view_date"
        android:layout_marginTop="5dip"
        android:background="#000000" />

</RelativeLayout>